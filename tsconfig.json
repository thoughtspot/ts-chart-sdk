{
  "compilerOptions": {
    "jsx": "react",
    "module": "esnext",
    "target": "es2019",
    "declaration": true,
    "declarationMap": true,
    "lib": ["es6", "dom", "es2016", "es2017", "es2018", "es2019", "es2020", "esnext"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "outDir": "lib",
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "cjs",
    "lib"
  ],
  "typedocOptions": {
    "entryPoints": ["./src/index.ts"],
    "out": "./docs",
    "excludePrivate": true,
    "excludeProtected": true,
    "excludeInternal": true,
    "hideGenerator": true,
    "sort": ["kind", "alphabetical"],
    "defaultCategory": "Others",
    "categorizeByGroup": true,
    "categoryOrder": [
      "Chart Model",
      "Classes",
      "Interfaces"
    ],
    "blockTags": ["@version","@returns", "@param"]
  }
}